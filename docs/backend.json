
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the CampusConnect application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "fullName": {
          "type": "string",
          "description": "The full name of the user."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "registrationDate": {
          "type": "string",
          "description": "The date and time the user registered.",
          "format": "date-time"
        },
        "role": {
          "type": "string",
          "enum": ["student", "faculty", "admin"]
        }
      },
      "required": [
        "id",
        "email",
        "registrationDate"
      ]
    },
    "Course": {
      "title": "Course",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "category": { "type": "string" },
        "description": { "type": "string" },
        "iconName": { "type": "string", "description": "Lucide icon name" }
      },
      "required": ["title", "category", "description"]
    },
    "FacultyMember": {
      "title": "Faculty Member",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "experience": { "type": "string" },
        "description": { "type": "string" },
        "imageId": { "type": "string", "description": "Reference to placeholder-images.json" }
      },
      "required": ["name", "role", "experience"]
    },
    "Facility": {
      "title": "Facility",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "iconName": { "type": "string" },
        "imageId": { "type": "string" }
      },
      "required": ["title", "description"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/User"
      },
      "description": "Private user profile data."
    },
    "/courses/{courseId}": {
      "schema": {
        "$ref": "#/backend/entities/Course"
      },
      "description": "Publicly available course information."
    },
    "/faculty/{facultyId}": {
      "schema": {
        "$ref": "#/backend/entities/FacultyMember"
      },
      "description": "Publicly available faculty profiles."
    },
    "/facilities/{facilityId}": {
      "schema": {
        "$ref": "#/backend/entities/Facility"
      },
      "description": "Publicly available campus facility details."
    }
  }
}
