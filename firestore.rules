
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    // User Profiles: Private and owned by the user.
    match /users/{userId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isOwner(userId);
    }

    // Public Informational Collections
    // These allow anyone to read, but only admins (if defined) or manual updates can write.
    // For now, we allow public read access for the prototype.
    
    match /courses/{courseId} {
      allow read: if true;
      allow write: if false; // Managed via console or admin
    }

    match /faculty/{facultyId} {
      allow read: if true;
      allow write: if false;
    }

    match /facilities/{facilityId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
